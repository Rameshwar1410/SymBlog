<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>
            {% block title %}Welcome!
            {% endblock %}
        </title>
        {% block stylesheets %}
            <!-- Custom fonts for this template-->
            <link href="{{ asset('plugins/fontawesome-free/css/all.min.css')}}" rel="stylesheet" type="text/css">
            <link
            href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

            <!-- Custom styles for this template-->
            <link href="{{ asset('css/sb-admin-2.min.css')}}" rel="stylesheet">
            <link href="https://cdn.datatables.net/v/bs4/dt-1.10.18/datatables.min.css" rel="stylesheet" type="text/css"/>
            <link href="{{ asset('plugins/Rich-Text-Editor-jQuery-RichText/src/richtext.min.css')}}" rel="stylesheet">
            <link href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.9/dist/css/bootstrap-select.min.css" rel="stylesheet">
            <script src="{{asset('plugins/jquery/jquery.min.js')}}"></script>
        {% endblock %}
    </head>
    <body>
        <!-- Page Wrapper -->
        <div id="wrapper">
            {% if is_granted('ROLE_ADMIN') %}
                {% include 'layout/sidebar.html.twig' %}
            {% endif %}
            <!-- Content Wrapper -->
            <div class="d-flex flex-column" id="content-wrapper">

                <!-- Main Content -->
                <div id="content">

                    <!-- Topbar -->
                    {% include 'layout/topbar.html.twig' %}
                    <!-- End of Topbar -->

                    <!-- Begin Page Content -->
                        <div class="container-fluid">{% block body %}{% endblock %} </div>
                        <!-- End of Main Content -->

                        <!-- Footer -->
                        <footer class="sticky-footer bg-white">
                            <div class="container my-auto">
                                <div class="copyright text-center my-auto">
                                    <span>Copyright &copy; Your Website 2019</span>
                                </div>
                            </div>
                        </footer>
                        <!-- End of Footer -->

                    </div>
                    <!-- End of Content Wrapper -->

                </div>
                <!-- End of Page Wrapper -->
                {% block javascripts %}
                    <!-- Bootstrap core JavaScript-->

                    <script src="{{asset('plugins/bootstrap/js/bootstrap.bundle.min.js')}}"></script>

                    <!-- Core plugin JavaScript-->
                    <script src="{{asset('plugins/jquery-easing/jquery.easing.min.js')}}"></script>

                    <!-- Custom scripts for all pages-->
                    <script src="{{asset('js/sb-admin-2.min.js')}}"></script>


                    <!-- Page level custom scripts -->
                    <script src="{{ asset('plugins/Rich-Text-Editor-jQuery-RichText/src/jquery.richtext.js')}}"></script>
                    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.9/dist/js/bootstrap-select.min.js"></script>
                    <script src="https://cdn.datatables.net/v/bs4/dt-1.10.18/datatables.min.js" type="text/javascript"></script>
                {% endblock %}
            </body>
        </body>
    </html>

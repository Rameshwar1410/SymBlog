{% extends 'base.html.twig' %}

{% block title %}Users{% endblock %}

{% block body %}
     <!-- Page Heading -->
          <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">Users Show</h1>
            <a href="{{ path('user.list') }}" class="btn btn-info "><i class="fa fa-arrow-left"></i></a>
            
          </div>

    <!-- Content Row -->
    <div class="row">
      <div class="col-md-12">

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>FirstName</th>
                <td>{{ user.firstName }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ user.lastName }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img class="img-profile rounded-circle" src="{{ asset('Profile_images/') }}{{user.image}}" style="width: 80px;"></td>
            </tr>
        </tbody>
    </table>

    

    <a href="{{ path('users.edit', {'id': user.id}) }}" class="btn btn-warning"><i class="fa fa-edit"></i></a>
    <br><br>
    {{ include('users/_delete_form.html.twig') }}
    </div>
    </div>
   
{% endblock %}
